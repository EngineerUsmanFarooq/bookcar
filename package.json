{
  "name": "book-a-ride",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "install:all": "npm install --prefix client && npm install --prefix server",

    "dev": "concurrently \"npm run dev --prefix client\" \"npm run dev --prefix server\"",

    "dev:client": "npm run dev --prefix client",
